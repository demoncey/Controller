<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.controller.massena.controller.MainActivity">

    <Button
        android:id="@+id/turn_on"
        android:layout_width="86dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="turn on"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/turn_off"
        android:layout_width="84dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:text="turn off"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/turn_on"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/devices"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="16dp"
        android:text="get devices"
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/turn_off"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/dev_list"
        android:layout_width="333dp"
        android:layout_height="75dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/visible" />

    <Button
        android:id="@+id/visible"
        android:layout_width="84dp"
        android:layout_height="39dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:text="visible"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn_on" />
</android.support.constraint.ConstraintLayout>
